@model Instructor;

@{
}

<h1>Confirm Delete Instructor?</h1>

<form action="DeleteInstructor" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id">ID</label>
                <input asp-for="Id" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" readonly>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control" disabled>
                    <option></option>
                    <option value="true">Permanent</option>
                    <option value="false">Probationary</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Rank">Rank</label>
                <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control" disabled><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="HiringDate">Hiring Date</label>
                <input asp-for="HiringDate" class="form-control" type="date" readonly>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" class="btn bttn btn-secondary" onclick="history.back();">Cancel</button>

</form>
