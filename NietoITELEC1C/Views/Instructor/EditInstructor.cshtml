@model Instructor;

@{
}

<h1>Edit Instructor</h1>

<form action="EditInstructor" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id">ID</label>
                <input asp-for="Id" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control">
                    <option disabled selected></option>
                    <option value="permanent">Permanent</option>
                    <option value="probationary">Probationary</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Rank">Rank</label>
                <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"><option disabled selected></option></select>
            </div>
            <div class="form-group">
                <label asp-for="HiringDate">Hiring Date</label>
                <input asp-for="HiringDate" class="form-control" type="date">
            </div>
        </div>
    </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn bttn btn-secondary" onclick="history.back();">Cancel</button>
        
</form>
