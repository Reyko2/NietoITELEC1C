@model Student;

@{
}

<h1>Edit Student</h1>

<form action="EditStudent" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id">ID</label>
                <input asp-for="Id" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Major">Course</label>
                <select asp-for="Major" asp-items="Html.GetEnumSelectList(typeof(Major))" class="form-control"><option disabled selected></option></select>
            </div>
            <div class="form-group">
                <label asp-for="Birthday">Birthday</label>
                <input asp-for="Birthday" class="form-control" type="date">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn bttn btn-secondary" onclick="history.back();">Cancel</button>
   
</form>

