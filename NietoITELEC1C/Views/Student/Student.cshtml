@*
   
*@

@{
    // Declare variables
    var FirstName = "Rico";
    var LastName = "Nieto";
   
    // Calculate grade
    int PrelimGrade = 98;
    int FinalGrade = 91;
    decimal SemGrade = (PrelimGrade + FinalGrade) / 2.0M;
    var TransmutedGrade = "";

    if (SemGrade >= 96)
    {
        TransmutedGrade = "1.00";
    }
    else if (SemGrade >= 94)
    {
        TransmutedGrade = "1.25";
    }
    else if (SemGrade >= 92)
    {
        TransmutedGrade = "1.50";
    }
    else if (SemGrade >= 89)
    {
        TransmutedGrade = "1.75";
    }
    else if (SemGrade >= 87)
    {
        TransmutedGrade = "2.00";
    }
    else if (SemGrade >= 84)
    {
        TransmutedGrade = "2.25";
    }
    else if (SemGrade >= 82)
    {
        TransmutedGrade = "2.50";
    }
    else if (SemGrade >= 79)
    {
        TransmutedGrade = "2.75";
    }
    else if (SemGrade >= 75)
    {
        TransmutedGrade = "3.00";
    }
    else
    {
        TransmutedGrade = "5.00";
    }
}
<input type="checkbox" class="theme-checkbox" id="night"> 
<a class="btn btn-primary" asp-action="AddStudent" asp-controller="Student">Add Student</a>
<br />

    <div class="text-center">
        <h3>
            Student Grade
        </h3>
    <table>
        <tr>
            <td>Name:</td>
            <td>@FirstName @LastName</td>
        </tr>
        <tr>
            <td>Prelim:</td>
            <td>@PrelimGrade</td>
        </tr>
        <tr>
            <td>Final:</td>
            <td>@FinalGrade</td>
        </tr>
        <tr>
            <td>Semestral Grade:</td>
            <td>@SemGrade.ToString("N2")</td>
        </tr>
        <tr>
            <td>Transmuted Grade:</td>
            <td>@TransmutedGrade</td>
        </tr>
    </table>
    </div>
    <br />
    <div>
        <table class="table table-danger">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>Major</th>
                <th>Details</th>
            <th>Update</th>
            </tr>

            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.Birthday</td>
                    <td>@student.Major</td>
                <td><a class="btn btn-primary" a asp-action="showDetails" asp-route-id="@student.Id">Show Details</a> </td>
                <td><a class="btn btn-primary" a asp-action="EditStudent" asp-route-id="@student.Id">Edit</a></td>
                </tr>
            }
        </table>
    </div>

