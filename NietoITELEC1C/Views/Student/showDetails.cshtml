@model Student;

<h1>Student Details</h1>

<table class="table table-danger">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Major</th>
        <td>@Model.Major</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Birthday Date</th>
        <td>@Model.Birthday.ToString("d")</td>
    </tr>
</table>